<h1>User#edit</h1>
<%= form_with model:@user, local:true do |f| %>
  <div>
    <p>Name</p>
    <%= f.text_field :name %><br />
  </div>

  <div>
    <label for="inputImage">Image</label></br>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>

  <div>
    <p>Introduction</p>
    <%= f.text_area :introduction %>
  </div>
  <%= f.submit 'Update User' %>
<% end %>