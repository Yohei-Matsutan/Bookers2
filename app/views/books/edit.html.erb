<h1>Books#edit</h1>
<%= form_with model:@book, local:true do |f| %>
  <div>
    <p>Title</p>
    <%= f.text_field :title %><br />
  </div>
  <div>
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show', book_path(@book.id) %>
<%= link_to 'Back', books_path %>