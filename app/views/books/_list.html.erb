<h2>Books</h2>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user.id) do %>
            <!--bookからuserテーブルの情報を取得するときはこう書く-->
            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <%end%>
        </td>

        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <%end%>
        </td>

        <td>
          <%= book.body %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>

<%= paginate books %>